<Page
    x:Class="game_project.ResetScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:game_project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="screen">
        <Grid.RowDefinitions>
            <RowDefinition Height="100px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100px"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100px"/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="1" Grid.Row="1" Background="LightGoldenrodYellow">
        </Canvas>
        <Button x:ConnectionId='3' x:Name="quit_btn" Content="quit game" Margin="0,398,0,0" VerticalAlignment="Top" Height="48" Width="98" BorderBrush="#FF3B9598" Background="#FF1B1810" Foreground="White" FontSize="20" FontFamily="Blackadder ITC"                          Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1"/>
        <Button x:ConnectionId='4' x:Name="reset_btn" Content="reset game" Margin="0,276,0,0" Height="89" Width="196" BorderBrush="#FF3B9598" Background="#FF1B1810" Foreground="White" FontSize="48" FontFamily="Blackadder ITC"                           Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="score" Margin="364,44,307,383" Text="you'r pet died!" TextWrapping="Wrap" FontSize="75" FocusVisualSecondaryBrush="#99FFFFFF" FocusVisualPrimaryBrush="White" Foreground="#FF040404" SelectionHighlightColor="White" Grid.Column="1" Grid.Row="1" FontFamily="Blackadder ITC"/>
        <TextBlock x:ConnectionId='6' x:Name="score1" Margin="323,140,576,326" Text="time alive:" TextWrapping="Wrap" FontSize="48" FocusVisualSecondaryBrush="#99FFFFFF" FocusVisualPrimaryBrush="White" Foreground="#FF040404" SelectionHighlightColor="White" Grid.Column="1" Grid.Row="1" FontFamily="Blackadder ITC"/>
        <TextBlock x:ConnectionId='7' x:Name="time_txt" HorizontalAlignment="Left" Margin="337,187,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="61" Width="418" Foreground="Black" FocusVisualSecondaryBrush="#990D0D0D" SelectionHighlightColor="#FF4F9EDD" Grid.Column="1" Grid.Row="1" FontSize="48" TextAlignment="Center"/>
        <Border BorderThickness="2" BorderBrush="Black" Grid.Column="1" Grid.Row="1" Margin="323,183,319,276" Height="61"/>
    </Grid>
</Page>

